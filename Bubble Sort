#include<stdio.h>
void BubbleSort(int arr[],int n){
    int i,j,temp,swapped;
    for(i=0;i<n-1;i++){
        swapped=0;
        for(j=0;j<n-i-1;j++){
            if(arr[j]>arr[j+1]){
                temp=arr[j];
                arr[j]=arr[j+1];
                arr[j+1]=temp;
                swapped=1;
            }
        }
    }
}
int main(){
    int n,i;
    printf("Enter the no of elements : ");
    scanf("%d",&n);
    int arr[n];
    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    BubbleSort(arr,n);
    printf("Bubble Sort : ");
    for(i=0;i<n;i++)
    printf("%d,",arr[i]);
    return 0;
}
